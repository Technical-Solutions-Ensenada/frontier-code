---
interface Props {
  class?: string;
  background?: 'light' | 'slate' | 'blue' | 'dark';
  id?: string;
}

const { class: className = '', background = 'dark', id } = Astro.props;

const backgrounds = {
  light: 'bg-slate-900',
  slate: 'bg-slate-950',
  blue: 'bg-blue-950/50',
  dark: 'bg-slate-950'
};
---

<section id={id} class={`py-16 sm:py-20 lg:py-24 ${backgrounds[background]} ${className}`}>
  <slot />
</section>
