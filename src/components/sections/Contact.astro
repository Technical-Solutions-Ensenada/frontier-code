---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import ContactForm from '../islands/ContactForm.astro';
---

<Section id="contact" background="dark">
    <Container>
        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6">
                    <span class="bg-gradient-to-r from-cyan-400 via-cyan-300 to-purple-400 bg-clip-text text-transparent">
                        Contacta Con Nosotros
                    </span>
                </h2>
                <p class="text-lg sm:text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
                    ¿Listo para comenzar tu proyecto? Hablemos.
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Contact Info -->
                <div>
                    <h3 class="text-2xl font-semibold text-slate-300 mb-8">
                        Información de Contacto
                    </h3>

                    <div class="space-y-6">
                        <div class="flex items-start p-4 bg-slate-800/50 border border-slate-700/50 rounded-lg hover:border-cyan-500/30 transition-all duration-300">
                            <div class="w-6 h-6 mt-1 mr-4 flex-shrink-0">
                                <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-slate-300 mb-1">Dirección</h4>
                                <p class="text-slate-400">Calle Tecnología 123, Ciudad Tech</p>
                            </div>
                        </div>

                        <div class="flex items-start p-4 bg-slate-800/50 border border-slate-700/50 rounded-lg hover:border-cyan-500/30 transition-all duration-300">
                            <div class="w-6 h-6 mt-1 mr-4 flex-shrink-0">
                                <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-slate-300 mb-1">Email</h4>
                                <p class="text-slate-400">contacto@frontiercode.com</p>
                            </div>
                        </div>

                        <div class="flex items-start p-4 bg-slate-800/50 border border-slate-700/50 rounded-lg hover:border-cyan-500/30 transition-all duration-300">
                            <div class="w-6 h-6 mt-1 mr-4 flex-shrink-0">
                                <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-slate-300 mb-1">Teléfono</h4>
                                <p class="text-slate-400">+1 (555) 123-4567</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-8 p-6 bg-slate-800/50 border border-slate-700/50 rounded-lg">
                        <h4 class="font-semibold text-slate-300 mb-4">Horario</h4>
                        <p class="text-slate-400 mb-2">Lunes - Viernes: 9:00 AM - 6:00 PM</p>
                        <p class="text-slate-400">Sábado - Domingo: Cerrado</p>
                    </div>
                </div>

                <!-- Contact Form -->
                <div>
                    <ContactForm/>
                </div>
            </div>
        </div>
    </Container>
</Section>
