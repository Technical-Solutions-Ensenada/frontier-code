---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import ContactForm from '../islands/ContactForm.astro';
---

<Section id="contact" background="blue">
  <Container>
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">
          Contacta Con Nosotros
        </h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          ¿Listo para comenzar tu proyecto? Hablemos.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h3 class="text-2xl font-semibold text-slate-900 mb-6">
            Información de Contacto
          </h3>

          <div class="space-y-4">
            <div class="flex items-start">
              <div class="w-6 h-6 mt-1 mr-3">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-slate-900">Dirección</h4>
                <p class="text-slate-600">Calle Tecnología 123, Ciudad Tech</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-6 h-6 mt-1 mr-3">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-slate-900">Email</h4>
                <p class="text-slate-600">contacto@frontiercode.com</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-6 h-6 mt-1 mr-3">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-slate-900">Teléfono</h4>
                <p class="text-slate-600">+1 (555) 123-4567</p>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <h4 class="font-semibold text-slate-900 mb-3">Horario</h4>
            <p class="text-slate-600">Lunes - Viernes: 9:00 AM - 6:00 PM</p>
            <p class="text-slate-600">Sábado - Domingo: Cerrado</p>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <ContactForm />
        </div>
      </div>
    </div>
  </Container>
</Section>
