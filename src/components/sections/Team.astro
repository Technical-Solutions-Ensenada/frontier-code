---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';
---

<Section id="team" class="bg-slate-950">
  <Container>
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4">
        Equipo FrontierCode
      </h2>
      <p class="text-lg sm:text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
        Equipo de profesionales expertos en diseñar y desarrollar soluciones tecnológicas innovadoras
        de alto Impacto.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Team Member 1 -->
      <Card class="overflow-hidden group hover:scale-105 transition-all duration-300 hover:shadow-lg hover:shadow-cyan-500/50">
        <div class="aspect-square bg-gradient-to-br from-cyan-500 to-purple-500 flex items-center justify-center group-hover:from-cyan-400 group-hover:to-purple-400 transition-all duration-300">
          <span class="text-white text-4xl font-bold">OQ</span>
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-white">Oscar Quintero</h3>
          <p class="text-cyan-400 text-sm">CEO</p>
        </div>
      </Card>

      <!-- Team Member 2 -->
      <Card class="overflow-hidden group hover:scale-105 transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/50">
        <div class="aspect-square bg-gradient-to-br from-purple-500 to-cyan-500 flex items-center justify-center group-hover:from-purple-400 group-hover:to-cyan-400 transition-all duration-300">
          <img src="/public/jorge-m.jpeg" alt="Jorge Márquez — CTO" 
          class="object-contain object-center w-full h-full block p-2 sm:object-cover sm:p-0" loading="lazy" decoding="async" />
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-white">Jorge Márquez</h3>
          <p class="text-purple-400 text-sm">CTO</p>
        </div>
      </Card>

      <!-- Team Member 3 -->
      <Card class="overflow-hidden group hover:scale-105 transition-all duration-300 hover:shadow-lg hover:shadow-cyan-500/50">
        <div class="aspect-square bg-gradient-to-br from-cyan-500 to-purple-500 flex items-center justify-center group-hover:from-cyan-400 group-hover:to-purple-400 transition-all duration-300">
          <!-- <span class="text-white text-4xl font-bold">OS</span> -->
          <img src="/public/ociel-s.png" alt="Ociel Solis — Marketing y Redes Sociales" 
          class="object-contain object-center w-full h-full block p-2 sm:object-cover sm:p-0" loading="lazy" decoding="async" />
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-white">Ociel Solis</h3>
          <p class="text-cyan-400 text-sm">Marketing y Redes Sociales</p>
        </div>
      </Card>

      <!-- Team Member 4 -->
      <Card class="overflow-hidden group hover:scale-105 transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/50">
        <div class="aspect-square bg-gradient-to-br from-purple-500 to-cyan-500 flex items-center justify-center group-hover:from-purple-400 group-hover:to-cyan-400 transition-all duration-300">
          <span class="text-white text-4xl font-bold">ED</span>
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-white">Erick Leuman Dragustinovis</h3>
          <p class="text-purple-400 text-sm">Ingeniero de Software Senior</p>
        </div>
      </Card>
      <!-- Team Member 4 -->
      <Card class="overflow-hidden group hover:scale-105 transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/50">
        <div class="aspect-square bg-gradient-to-br from-purple-500 to-cyan-500 flex items-center justify-center group-hover:from-purple-400 group-hover:to-cyan-400 transition-all duration-300">
          <img src="/public/roberto-s.png" alt="Roberto Gamaliel Sanchez — Arquitecto de Sistemas Críticos" 
          class="object-contain object-center w-full h-full block p-2 sm:object-cover sm:p-0" loading="lazy" decoding="async" />
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-white">Roberto Gamaliel Sanchez</h3>
          <p class="text-cyan-400 text-sm">Arquitecto de Sistemas Críticos </p>
        </div>
      </Card>
    </div>
  </Container>
</Section>
