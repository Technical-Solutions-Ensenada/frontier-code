---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';
---

<Section id="team">
  <Container>
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">
        Nuestro Equipo
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Profesionales apasionados por la tecnología y la innovación.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Team Member 1 -->
      <Card class="overflow-hidden">
        <div class="aspect-square bg-linear-to-br from-blue-400 to-blue-600 flex items-center justify-center">
          <span class="text-white text-4xl font-bold">LP</span>
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-slate-900">Laura Pérez</h3>
          <p class="text-slate-600 text-sm">CEO & Fundadora</p>
        </div>
      </Card>

      <!-- Team Member 2 -->
      <Card class="overflow-hidden">
        <div class="aspect-square bg-linear-to-br from-purple-400 to-purple-600 flex items-center justify-center">
          <span class="text-white text-4xl font-bold">RM</span>
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-slate-900">Roberto Martínez</h3>
          <p class="text-slate-600 text-sm">CTO</p>
        </div>
      </Card>

      <!-- Team Member 3 -->
      <Card class="overflow-hidden">
        <div class="aspect-square bg-linear-to-br from-green-400 to-green-600 flex items-center justify-center">
          <span class="text-white text-4xl font-bold">AS</span>
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-slate-900">Ana Sánchez</h3>
          <p class="text-slate-600 text-sm">Lead Developer</p>
        </div>
      </Card>

      <!-- Team Member 4 -->
      <Card class="overflow-hidden">
        <div class="aspect-square bg-linear-to-br from-orange-400 to-orange-600 flex items-center justify-center">
          <span class="text-white text-4xl font-bold">DL</span>
        </div>
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold text-slate-900">David López</h3>
          <p class="text-slate-600 text-sm">UX Designer</p>
        </div>
      </Card>
    </div>
  </Container>
</Section>
