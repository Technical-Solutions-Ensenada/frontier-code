      <!-- Project 3 -->
      <Card class="overflow-hidden">
        <div class="aspect-video bg-linear-to-br from-green-400 to-green-600 flex items-center justify-center">
          <span class="text-white text-lg font-semibold">Proyecto 3</span>
        </div>
        <div class="p-6">
