 ---
import Container from '../../components/ui/Container.astro';
---

<header class="sticky top-0 z-50 bg-slate-950/80 backdrop-blur-xl border-b border-cyan-500/20">
  <Container>
    <nav class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold group">
        <span class="px-4 py-2 bg-slate-800/50 border border-cyan-500/30 rounded-full text-cyan-400 text-sm font-mono">
          &lt;FrontierCode/&gt;
        </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:items-center md:space-x-1">
        <a href="#hero" class="relative px-4 py-2 text-slate-400 hover:text-cyan-300 transition-all duration-300 hover:scale-105 group">
          <span class="relative z-10">Inicio</span>
          <span class="absolute inset-0 bg-cyan-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        </a>
        <a href="#about" class="relative px-4 py-2 text-slate-400 hover:text-cyan-300 transition-all duration-300 hover:scale-105 group">
          <span class="relative z-10">Nosotros</span>
          <span class="absolute inset-0 bg-cyan-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        </a>
        <a href="#services" class="relative px-4 py-2 text-slate-400 hover:text-cyan-300 transition-all duration-300 hover:scale-105 group">
          <span class="relative z-10">Servicios</span>
          <span class="absolute inset-0 bg-cyan-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        </a>
        <a href="#portfolio" class="relative px-4 py-2 text-slate-400 hover:text-cyan-300 transition-all duration-300 hover:scale-105 group">
          <span class="relative z-10">Portafolio</span>
          <span class="absolute inset-0 bg-cyan-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        </a>
        <a href="#team" class="relative px-4 py-2 text-slate-400 hover:text-cyan-300 transition-all duration-300 hover:scale-105 group">
          <span class="relative z-10">Equipo</span>
          <span class="absolute inset-0 bg-cyan-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        </a>
        <a href="#contact" class="relative px-4 py-2 text-slate-400 hover:text-cyan-300 transition-all duration-300 hover:scale-105 group">
          <span class="relative z-10">Contacto</span>
          <span class="absolute inset-0 bg-cyan-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        </a>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block ml-4">
        <a href="#contact" class="inline-flex items-center gap-2 px-6 py-2.5 bg-gradient-to-r from-cyan-500 to-cyan-600 text-white font-semibold rounded-lg hover:from-purple-500 hover:to-cyan-500 transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-cyan-500/50">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <span>Contáctanos</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="md:hidden relative p-3 rounded-lg text-cyan-400 hover:bg-cyan-500/10 hover:text-cyan-300 transition-all duration-300 hover:scale-105 group"
        aria-label="Abrir menú"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <span class="absolute inset-0 bg-cyan-500/20 rounded-lg blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
      </button>
    </nav>
  </Container>
</header>
