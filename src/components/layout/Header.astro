---
import Container from '../ui/Container.astro';
---

<header class="sticky top-0 z-50 bg-white border-b border-slate-200 shadow-sm">
  <Container>
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-xl font-bold text-blue-600 hover:text-blue-700">
          Frontier Code
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:items-center md:space-x-8">
        <a href="#hero" class="text-slate-700 hover:text-blue-600 transition-colors">Inicio</a>
        <a href="#about" class="text-slate-700 hover:text-blue-600 transition-colors">Nosotros</a>
        <a href="#services" class="text-slate-700 hover:text-blue-600 transition-colors">Servicios</a>
        <a href="#portfolio" class="text-slate-700 hover:text-blue-600 transition-colors">Portafolio</a>
        <a href="#team" class="text-slate-700 hover:text-blue-600 transition-colors">Equipo</a>
        <a href="#contact" class="text-slate-700 hover:text-blue-600 transition-colors">Contacto</a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="md:hidden p-2 rounded-lg text-slate-700 hover:bg-slate-100"
        aria-label="Abrir menÃº"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </Container>
