---
import Container from '../ui/Container.astro';
---

<footer class="bg-blue-900 text-primary-300">
    <Container>
        <div class="py-12">
            <!-- Company Info -->
            <div class="flex flex-col md:flex-row justify-between items-center">
                <h3 class="text-xl font-bold text-white mb-4">Technical Solutions Ensenada</h3>
                <p class="text-slate-400 mb-4">
                    Empresa de desarrollo de software enfocada en soluciones modernas e innovadoras.
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mt-5">

                <!-- Quick Links -->
                <div>
                    <h4 class="text-white font-semibold mb-4">Servicios</h4>
                    <ul class="space-y-2">
                        <li><a href="#hero" class="hover:text-white transition-colors">Creacion de Apis</a></li>
                        <li><a href="#hero" class="hover:text-white transition-colors">Desarrollo de Software</a></li>
                        <li><a href="#hero" class="hover:text-white transition-colors">Desarrollo de Aplicaciones
                            Web</a></li>
                        <li><a href="#hero" class="hover:text-white transition-colors">Desarrollo de Aplicaciones
                            Moviles</a></li>
                    </ul>
                </div>
                <!-- Quick Links -->
                <div>
                    <h4 class="text-white font-semibold mb-4">Recursos</h4>
                    <ul class="space-y-2">
                        <li><a href="#hero" class="hover:text-white transition-colors">Blog</a></li>
                        <li><a href="#contact" class="hover:text-white transition-colors">Contacto</a></li>
                        <li><a href="#contact" class="hover:text-white transition-colors">Servicios</a></li>
                        <li><a href="#services" class="hover:text-white transition-colors">Centro de Ayuda</a></li>
                        <li><a href="#portfolio" class="hover:text-white transition-colors">Casos de Estudio</a></li>
                        <li><a href="#contact" class="hover:text-white transition-colors">Actualizaciones de
                            productos</a></li>
                    </ul>
                </div>

                <!-- Quick Links -->
                <div>
                    <h4 class="text-white font-semibold mb-4">Empresa</h4>
                    <ul class="space-y-2">
                        <li><a href="#hero" class="hover:text-white transition-colors">Clientes</a></li>
                        <li><a href="#hero" class="hover:text-white transition-colors">Carreras</a></li>
                        <li><a href="#hero" class="hover:text-white transition-colors">Planes y Horarios</a></li>
                        <li><a href="#hero" class="hover:text-white transition-colors">Retroalimentacion</a></li>
                        <li><a href="#hero" class="hover:text-white transition-colors">Acerca de Nosotros</a></li>
