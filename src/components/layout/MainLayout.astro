---
import Header from './Header.astro';
import Footer from './Footer.astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`flex flex-col min-h-screen ${className}`}>
  <Header />
  <main class="flex-grow">
    <slot />
  </main>
  <Footer />
</div>
